---
import "../styles/style.scss";
import "../styles/css/validate.css";
import "../styles/css/fancybox.css";
import Modal from "../components/Modal.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Isi from "../components/ISI.astro";


export interface Props {
	title: string;
	hero?: boolean;
}

const { title, hero } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="alternate icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<link
		  rel="stylesheet"
		  href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		{hero && <Hero />}
		<!-- <Hero /> -->
		<main class="main">
			<slot />
			<Isi />
		</main>
		<Modal />
		<Footer />
		<!-- <script src="/js/fancybox.umd.js" type="module"></script> -->
		<script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
		<script is:inline>Fancybox.bind()</script>
		<script src="/js/script.js" type="module"></script>
		<script is:inline src="/js/validate.js"></script>
	</body>
</html>
