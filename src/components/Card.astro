---
type Props = {
  title: string;
  image: string;
  alt: string | null;
};

const { title, image, alt } = Astro.props;
---

<div class="card">
  <div class="card__header">
    <img src={image} class="card__icon" alt={alt} />
    <h4 class="card__title">{title}</h4>
  </div>
  <div class="card__content">
    <slot />
  </div>
</div>
