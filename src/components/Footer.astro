---

<footer class="footer">
  <div class="wrapper">
    <!-- Footer Logo -->
    <div class="footer__branding">
      <p>
        <a class="footer__branding_link" href="#" target="_blank">
          <img
            class="footer__branding_link_logo"
            src="/images/alexion-logo.svg"
            alt="Alexion"
          />
        </a>
      </p>
      <p>
        <a class="footer__branding_social" href="#" target="_blank">
          Visit Us:
          <img
            class="facebook_logo"
            src="/icons/facebook-alt.svg"
            alt="Facebook"
          />
        </a>
      </p>
      <p class="footer__branding_disclaimer">
        This site is intended for US Consumers.
      </p>
    </div>

    <!-- Footer Navigation -->
    <div class="footer__links">
      <nav class="footer__nav">
        <ul class="footer__nav_menu">
          <li class="footer__nav_menu_item">
            <a class="footer__nav_menu_item_link" href="/">Contact Us</a>
          </li>
