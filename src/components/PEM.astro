---
type Props = {
  name: string;
  photoSrc: string;
  photoAlt: string;
  email: string;
  phone: string;
};

const { name, photoSrc, photoAlt, email, phone } = Astro.props;
---

<div class="pem">
  <div class="pem__photo">
    <img class="pem__photo_img" src={photoSrc} alt={photoAlt} />
  </div>
  <div class="pem__content">
    <h3 class="pem__name">{name}</h3>
    <h4 class="pem__heading">What motivates you?</h4>
    <slot name="motivates" />
    <h4 class="pem__heading">My #1 goal</h4>
    <slot name="goal" />
    <ul class="pem__link_list">
      <li class="pem__link_list_item">
        <a class="pem__link button" href={`mailto:${email}`}> Email {name}</a>
      </li>
      <li class="pem__link_list_item">
        <a class="pem__link" href={`tel:${phone}`}>
          Or call {phone}
        </a>
      </li>
    </ul>
  </div>
</div>
